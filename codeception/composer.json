{
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-webdriver": "^2.0",
        "codeception/module-rest": "^2.0",
        "codeception/module-db": "^2.0",
        "codeception/module-doctrine2": "^2.0",
        "codeception/module-symfony": "^2.1",
        "doctrine/orm": "^2.11",
        "doctrine/dbal": "^3.2",
        "symfony/cache": "^5.4"
    },
    "autoload": {
        "psr-0": { "": "tests/_support/_files/doctrine/entities/" },
        "psr-4": { "CuatroPhp\\": ".." }
    },
    "scripts": {
        "test": "php vendor/bin/codecept run",
        "test:wip": "php vendor/bin/codecept run -g wip",
        "gen:steps": "php vendor/bin/codecept gherkin:snippets selenium",
        "test:steps": "php vendor/bin/codecept gherkin:steps selenium",
        "test:verbose": "php vendor/bin/codecept run -vv",
        "test:d": "php vendor/bin/codecept run --debug",
        "test:api:d": "php vendor/bin/codecept run api -g wip --debug",
        "test:bbdd": "php vendor/bin/codecept run bbdd",
        "test:bbdd:d": "php vendor/bin/codecept run bbdd --debug",
        "test:unit": "php vendor/bin/codecept run unit",
        "test:unit:d": "php vendor/bin/codecept run unit -g wip --debug"
    }
}
